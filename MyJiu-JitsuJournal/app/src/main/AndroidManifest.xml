<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ferraro.myjiujitsujournal.mjjj" >

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ferraro.myjiujitsujournal.activities.SplashActivity"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ferraro.myjiujitsujournal.activities.MainActivity" >
        </activity>
        <activity android:name="com.ferraro.myjiujitsujournal.database.SerializationDatabase" >
        </activity>
        <activity
            android:name="com.ferraro.myjiujitsujournal.activities.UsernameSetupActivity"
            android:label="@string/title_activity_username_setup" >
        </activity>
        <activity
            android:name="com.ferraro.myjiujitsujournal.activities.JournalActivity"
            android:label="@string/title_activity_journal"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.ferraro.myjiujitsujournal.activities.MoveActivity"
            android:label="@string/title_activity_move" >
        </activity>
        <activity
            android:name="com.ferraro.myjiujitsujournal.activities.EditMoveActivity"
            android:windowSoftInputMode="stateHidden|adjustPan|adjustResize" >
        </activity>
        <activity
            android:name="com.ferraro.myjiujitsujournal.activities.GymActivity"
            android:label="@string/title_activity_gym" >
        </activity>
        <activity
            android:name="com.ferraro.myjiujitsujournal.activities.ImageViewerActivity"
            android:label="@string/title_activity_image_viewer" >
        </activity>
        <activity
            android:name="com.ferraro.myjiujitsujournal.activities.GymListActivity"
            android:label="@string/title_activity_gym_list" >
        </activity>
    </application>

</manifest>
